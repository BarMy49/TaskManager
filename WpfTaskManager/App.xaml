<Application x:Class="WpfTaskManager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:localization="clr-namespace:TaskManager.Localization"
             xmlns:system="clr-namespace:System;assembly=mscorlib">
    <Application.Resources>
        <localization:ResourceLocalizer x:Key="Localizer"/>
        
        <!-- Zasoby lokalizacyjne -->
        <system:String x:Key="SearchText">Search</system:String>
        <system:String x:Key="TitleText">Title</system:String>
        <system:String x:Key="DescriptionText">Description</system:String>
        <system:String x:Key="StatusText">Status</system:String>
        <system:String x:Key="CategoryText">Category</system:String>
        <system:String x:Key="PriorityText">Priority</system:String>
        <system:String x:Key="DueDateText">Due Date</system:String>
        <system:String x:Key="PriorityFieldText">Priority</system:String>
        <system:String x:Key="DueDateFieldText">Due Date (dd-MM-yyyy)</system:String>
        <system:String x:Key="AddText">Add</system:String>
        <system:String x:Key="EditText">Edit</system:String>
        <system:String x:Key="EnterDeleteIdText">Enter task ID to delete</system:String>
        <system:String x:Key="DeleteText">Delete</system:String>
        <system:String x:Key="EnterToggleIdText">Enter task ID to change status</system:String>
        <system:String x:Key="ChangeStatusText">Change Status</system:String>
        <system:String x:Key="EnterEditIdText">Enter task ID to edit</system:String>
        <system:String x:Key="SearchByIdText">Search by ID</system:String>
        <system:String x:Key="SearchByCategoryText">Search by Category</system:String>
        <system:String x:Key="AllTasksText">Show All Tasks</system:String>
        <system:String x:Key="AddTaskText">Add New Task</system:String>
        <system:String x:Key="EditTaskText">Edit Task</system:String>
        <system:String x:Key="DeleteTaskText">Delete Task</system:String>
        <system:String x:Key="ToggleTaskText">Toggle Task Completion</system:String>
        <system:String x:Key="ListIncompleteText">Show Incomplete Tasks</system:String>
        <system:String x:Key="ListByPriorityText">Sort Tasks by Priority</system:String>
        <system:String x:Key="FilterByCategoryText">Filter by Category</system:String>
        <system:String x:Key="ExitText">Exit</system:String>
        <system:String x:Key="LanguageText">Language</system:String>
        <system:String x:Key="ThemeText">Theme</system:String>
        
        <!-- Style -->
        <Style TargetType="TextBox">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
    </Application.Resources>
</Application>