<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Kolory podstawowe inspirowane klasycznym motywem Angular Material -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#fafafa"/>
    <SolidColorBrush x:Key="ForegroundBrush" Color="#212121"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#1976d2"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#e0e0e0"/>
    <SolidColorBrush x:Key="AlternateRowBrush" Color="#f5f5f5"/>
    <SolidColorBrush x:Key="HeaderBrush" Color="#1976d2"/>
    <SolidColorBrush x:Key="HeaderTextBrush" Color="White"/>
    
    <!-- Kolory przyciskÃ³w i interakcji -->
    <SolidColorBrush x:Key="HoverBrush" Color="Red"/>
    <SolidColorBrush x:Key="HoverBorderBrush" Color="#1565c0"/>
    <SolidColorBrush x:Key="TitleTextBrush" Color="#1976d2"/>
    
    <!-- Kolory formularzy -->
    <SolidColorBrush x:Key="TextBoxBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="TextBoxBorderBrush" Color="#bdbdbd"/>
    <SolidColorBrush x:Key="TextBoxForegroundBrush" Color="white"/>
    
    <!-- Kolory ComboBox -->
    <SolidColorBrush x:Key="ComboBoxBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="ComboBoxBorderBrush" Color="#bdbdbd"/>
    
    <!-- Kolory DatePicker -->
    <SolidColorBrush x:Key="DatePickerBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="DatePickerBorderBrush" Color="#bdbdbd"/>
    
    <!-- Kolory menu i nawigacji -->
    <SolidColorBrush x:Key="MenuBackgroundBrush" Color="#eeeeee"/>
</ResourceDictionary>