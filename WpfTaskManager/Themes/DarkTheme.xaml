<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Kolory dla ciemnego motywu -->
    <!-- Podstawowe kolory -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#121212"/>
    <SolidColorBrush x:Key="ForegroundBrush" Color="#ffffff"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#6200ee"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#333333"/>
    <SolidColorBrush x:Key="AlternateRowBrush" Color="#1f1f1f"/>
    <SolidColorBrush x:Key="HeaderBrush" Color="#1a1a1a"/>
    <SolidColorBrush x:Key="HeaderTextBrush" Color="#ffffff"/>
    
    <!-- Kolory przyciskÃ³w i interakcji -->
    <SolidColorBrush x:Key="HoverBrush" Color="#7b1fa2"/>
    <SolidColorBrush x:Key="HoverBorderBrush" Color="#9c27b0"/>
    <SolidColorBrush x:Key="TitleTextBrush" Color="#bb86fc"/>
    
    <!-- Kolory formularzy -->
    <SolidColorBrush x:Key="TextBoxBackgroundBrush" Color="#2d2d2d"/>
    <SolidColorBrush x:Key="TextBoxBorderBrush" Color="#444444"/>
    <SolidColorBrush x:Key="TextBoxForegroundBrush" Color="#ffffff"/>
    
    <!-- Kolory ComboBox -->
    <SolidColorBrush x:Key="ComboBoxBackgroundBrush" Color="#2d2d2d"/>
    <SolidColorBrush x:Key="ComboBoxBorderBrush" Color="#444444"/>
    
    <!-- Kolory DatePicker -->
    <SolidColorBrush x:Key="DatePickerBackgroundBrush" Color="#2d2d2d"/>
    <SolidColorBrush x:Key="DatePickerBorderBrush" Color="#444444"/>
    
    <!-- Kolory menu i nawigacji -->
    <SolidColorBrush x:Key="MenuBackgroundBrush" Color="#1a1a1a"/>
</ResourceDictionary>